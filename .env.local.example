# Environment Configuration Template
# Copy this to .env.local and fill in your actual values

# Email Configuration (choose one provider)
# Gmail / SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# Alternative: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key

# Alternative: Mailgun
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-domain.mailgun.org

# Form Submission
FORM_SUBMISSION_EMAIL=gfeps@yahoo.com
NEXT_PUBLIC_FORM_ENDPOINT=/api/contact

# Booking Configuration
# Option 1: Calendly
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username

# Option 2: Custom booking (optional)
NEXT_PUBLIC_BOOKING_WEBHOOK=https://your-webhook.com/booking

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://gehad-ashraf.com
NEXT_PUBLIC_BRAND_NAME=Gehad Ashraf

# WhatsApp Business (optional)
NEXT_PUBLIC_WHATSAPP_NUMBER=201015362414
NEXT_PUBLIC_WHATSAPP_BUSINESS_API=your-whatsapp-business-api-key

# Social Media
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/gehad.ashraf
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/gehad.ashraf
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/gehad-ashraf
NEXT_PUBLIC_TIKTOK_URL=https://tiktok.com/@gehad.ashraf
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@gehad-ashraf

# Feature Flags
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_LEAD_MAGNET=true
